<resources>
    <!-- Button Style -->
    <style name="Widget.Yummy.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="strokeColor">?attr/colorOutline</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- Shape Appearance -->
    <style name="ShapeAppearance.Medium" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Widget.Yummy.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>

        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="CustomCalendarView" parent="android:Widget.CalendarView">
        <item name="android:weekNumberColor">@android:color/white</item>
        <item name="android:selectedDateVerticalBar">@android:color/white</item>
    </style>



    <!-- Card Style -->
    <style name="Card.Medium" parent="Widget.Material3.CardView.Elevated">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Medium</item>
        <item name="cardElevation">4dp</item>
    </style>
</resources>